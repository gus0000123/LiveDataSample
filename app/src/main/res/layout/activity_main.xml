<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_input"/>

    <Button
            android:id="@+id/btn_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="입력"
            app:layout_constraintTop_toBottomOf="@+id/et_input"
            app:layout_constraintBottom_toTopOf="@+id/sv_"/>

    <ScrollView
            android:id="@+id/sv_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_input"
            app:layout_constraintBottom_toTopOf="@+id/et_input">

        <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                tools:text="textsample\ntextsample\ntextsample\ntextsample\ntextsample\ntextsample\ntextsample\n"
                android:layout_height="match_parent"/>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>